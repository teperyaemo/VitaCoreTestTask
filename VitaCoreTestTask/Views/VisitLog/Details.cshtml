@model VitaCoreTestTask.Data.ViewModels.VisitLogReviewVM

@{
    ViewData["Title"] = "Посещение";    
}

<h1>Посещение</h1>
    <hr />
    
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitLog.PetOwner.Fullname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitLog.PetOwner.Fullname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitLog.Id_Pet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitLog.Id_Pet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitLog.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitLog.Date)
        </dd>
    </dl>
</div>

<p>
    <a class="btn btn-dark" asp-controller="RenderedService" asp-route-id="@Model.VisitLog.Id_VisitLog" asp-action="Create">Добавить услугу</a>
</p>
<hr />
@if (Model.RenderedServices.Any())
{
    <table class="table">
   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RenderedServices.First().Employee.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RenderedServices.First().Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RenderedServices.First().Service.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RenderedServices.First().ServiceCount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RenderedServices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceCount)
                </td>
                <td>                 
                    <a class="m-1" asp-controller="RenderedService" asp-action="Edit" asp-route-id="@item.Id_RenderedServ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>
                    </a>
                    <a class="m-1" asp-controller="RenderedService" asp-action="Delete" asp-route-id="@item.Id_RenderedServ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                        </svg>
                    </a> 
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <h3>Нет оказанных услуг</h3>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.VisitLog.Id_VisitLog">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
