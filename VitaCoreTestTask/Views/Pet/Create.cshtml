@model VitaCoreTestTask.Data.ViewModels.PetAddEditVM;

@{
    ViewData["Title"] = "Добавить питомца";
}

<h1>Добавить питомца</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="row">
                    <div class="col-md-6 mb-6">
                        <label asp-for="Id_Species">Вид</label>
                        <select asp-for="Id_Species" asp-items="Model.SpeciesList" class="custom-select d-block w-100" required="">
                            <option value="" disabled="disabled" selected="selected">Выбор...</option>
                        </select>
                        <div class="invalid-feedback">
                            Пожалуйста выберите вид.
                        </div>
                    </div>
                    <div class="col-md-6 mb-6">
                        <label asp-for="Id_Breed">Порода</label>
                        <select asp-for="Id_Breed" class="custom-select d-block w-100" asp-items="Model.BreedList" id="state" required="">
                            <option value="" disabled="disabled" selected="selected">Выбор...</option>
                        </select>
                        <div class="invalid-feedback">
                            Пожалуйста выберите породу.
                        </div>
                    </div>                
                </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="datetime-local"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" type="text"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Other" class="control-label"></label>
                <input asp-for="Other" class="form-control" />
                <span asp-validation-for="Other" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="PetOwner" asp-action="Details" asp-route-id="@Model.Id_PetOwner">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}