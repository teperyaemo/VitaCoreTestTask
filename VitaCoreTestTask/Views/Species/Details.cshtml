@model VitaCoreTestTask.Data.ViewModels.BreedsVM

@{
    ViewData["Title"] = "Клиент";    
}

<h1>Породы</h1>
    <hr />
    
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.species.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.species.Name)
        </dd>       
    </dl>
</div>

<form asp-controller="Species" asp-action="Details" method="post">
    <p>
        Название: <input type="text" asp-for="Name" />
        <input type="submit" value="Создать" />
    </p>
</form>
<hr />
@if (Model.breeds.Any())
{
    <table class="table">
   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.breeds.First().Id_Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.breeds.First().Name)
            </th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.breeds)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Breed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>               
                <td>
                    <a class="m-1" asp-controller="Species" asp-action="DeleteBreed" asp-route-id="@item.Id_Breed">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                        </svg>
                    </a> 
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <h3>У вида нет пород</h3>
}

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
